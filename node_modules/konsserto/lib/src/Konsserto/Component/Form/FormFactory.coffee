Form = use('@Konsserto/Component/Form/Form')
Tools = use('@Konsserto/Component/Static/Tools')

#
# FormFactory
#
# @author Jessym Reziga <jessym@konsserto.com>
#
class FormFactory


	constructor:(@stackRequest, @templating, @entityManager) ->
		@formItem = []

	createBuilder:(name = 'form', data = {}, options = {}) ->
		form = new Form(name, data, options, @stackRequest.getCurrentRequest(), @templating, @entityManager)
		@formItem[name] = form
		return form


module.exports = FormFactory



