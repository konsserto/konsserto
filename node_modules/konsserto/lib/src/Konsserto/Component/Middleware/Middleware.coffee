class Middleware


	setContainer:(@container) ->
		return this

	setApplication:(@app) ->
		return this

	getRequest:() ->
		return @container.get('Request_Stack').getCurrentRequest()

	getResponse:() ->
		return @response

	setRequest:(@request) ->
		return this

	setResponse:(@response) ->
		return this

	setNext:(@next) ->
		return this

	get:(name)->
		@container.get(name)

	getContainer:() ->
		return @container

	getApplication:() ->
		return @application

	next:() ->
		return @next


module.exports = Middleware