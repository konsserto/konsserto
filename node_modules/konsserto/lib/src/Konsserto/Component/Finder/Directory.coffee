# Directory logically identify a physic directory on filesystem
#
# @author Marvin Frachet <marvin@konsserto.com>
class Directory

  # Class constructor
  # @param {String} name name of the directory
  # @param {String} relativePath relativePath of the directory
  constructor: (@name, @relativePath)->
    if @relativePath.charAt(@relativePath.length - 1) != '/'
      @relativePath += '/'
    @relativePath += @name

  # @return {String} The relative path
  getRelativePath: ()->
    return @relativePath

  # @return {String} The directory name
  getName: ()->
    return @name

module.exports = Directory