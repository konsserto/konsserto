#
# Directory logically identify a physic directory on filesystem
#
# @author Marvin Frachet <marvin@konsserto.com>
#
class Directory

	constructor: (@name, @relativePath)->
		###
    		Instanciation of directory, with his name and his relative path
    	###
		if @relativePath.charAt(@relativePath.length - 1) != '/'
			@relativePath += '/'
		@relativePath += @name

	getRelativePath: ()->
		###
    		Get the directory relativePath
    	###
		return @relativePath

	getName: ()->
		###
    		Get the directory name
    	###
		return @name

module.exports = Directory