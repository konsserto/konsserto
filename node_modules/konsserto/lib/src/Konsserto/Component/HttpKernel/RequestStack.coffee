#
# RequestStack
#
# @author Jessym Reziga <jessym@konsserto.com>
#
class RequestStack


	constructor:(@translator) ->
		@requests = []

	push:(request) ->
		@requests.push(request)

	pop:() ->

		if !@requests
			return null

		@requests.pop()

	getCurrentRequest:() ->
		len = @requests.length-1

		if @requests[len]
			return @requests[len]

		return null

	getMasterRequest:() ->

		if !@requests
			return null

		return @requests[0]

	getParentRequest:() ->
		pos = @requests.len - 2

		if @requests[pos]
			return null

		return @requests[pos]

		
module.exports = RequestStack;