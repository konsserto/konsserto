#
# RouteArgument
#
# @author Jessym Reziga <jessym@konsserto.com>
#
class RouteArgument


	constructor:(@name,@rawArguments) ->

		if @rawArguments['match']?
			@match = ':'+@rawArguments['match']
		else
			@match = ':'+@getName()

		if @rawArguments['default']?
			@default = @rawArguments['default']
			@defaultExists = true
		else
			@default = ''
			@defaultExists = false

	getName:() ->
		return @name

	setName:(@name) ->
		return this

	hasDefault:() ->
		return @defaultExists

	getDefaultValue:() ->
		return @default

	setDefault:(@default) ->
		return this

	getMatch:() ->
		return @match

	setMatch:(@match) ->
		return this


module.exports = RouteArgument