# RouteArgument
# @author Jessym Reziga <jessym@konsserto.com>
class RouteArgument

  # Class constructor
  # @param {String} name The name of the route
  # @param {Object} rawArguments The raw arguments of the route
  constructor: (@name, @rawArguments) ->
    if @rawArguments['match']?
      @match = ':' + @rawArguments['match']
    else
      @match = ':' + @getName()
    if @rawArguments['default']?
      @default = @rawArguments['default']
      @defaultExists = true
    else
      @default = ''
      @defaultExists = false

  # @return {String} The name of the route
  getName: () ->
    return @name

  # @param {String} name The name of the route
  setName: (@name) ->
    return this

  # @return {Boolean} The default exists value
  hasDefault: () ->
    return @defaultExists

  # @return {Object} The default value
  getDefaultValue: () ->
    return @default

  # @param {Object} default The default value
  setDefault: (@default) ->
    return this

  # @return {String} The match value
  getMatch: () ->
    return @match

  # @param {String} match The match value
  setMatch: (@match) ->
    return this


module.exports = RouteArgument