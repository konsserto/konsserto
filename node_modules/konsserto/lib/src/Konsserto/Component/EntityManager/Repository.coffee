class Repository

  setAdapter: (@adapter)->
    # Injected when instanciated by the EntityManager

  getAll: ()->
    return @adapter.getAll()

  getById: (id, joins)->
    return @adapter.getById(id, joins)

  getByCriteria: (criteria, joins)->
    return @adapter.getByCriteria(criteria, joins)

  add: (object)->
    return @adapter.add(object)

  remove: (object)->
    return @adapter.remove(object)

  removeById: (id)->
    return @adapter.remove(id)

  modify: (objectSource, newObject)->
    return @adapter.modify(objectSource, newObject)

  modifyById: (id, newObject)->
    return @adapter.modify(id, newObject)

module.exports = Repository