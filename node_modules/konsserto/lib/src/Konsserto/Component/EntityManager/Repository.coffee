class Repository

  constructor: (@collectionName)->

  getName: ()->
    return @collectionName

  setAdapter: (@adapter)->
    return @

  getAll: ()->
    return @adapter.getAll(@collectionName)

  getById: (id)->
    return @adapter.getById(@collectionName, id)

  getByCriteria: (criteria)->
    return @adapter.getByCriteria(@collectionName, criteria)

  add: (@collectionName, object, callback)->
    return @adapter.add(@collectionName, object, callback)

  remove: (object)->
    return @adapter.remove(object)

  removeById: (id)->
    return @adapter.remove(id)

  modify: (objectSource, newObject)->
    return @adapter.modify(objectSource, newObject)

  modifyById: (id, newObject)->
    return @adapter.modify(id, newObject)

module.exports = Repository